{
  "name": "leakybucket-challenge",
  "version": "1.0.0",
  "description": "Leaky Bucket Challenge backend with Node.js, Koa, TypeScript and GraphQL",
  "private": true,
  "main": "dist/src/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/src/server.js",
    "lint": "eslint . --ext .ts",
    "test": "NODE_ENV=test jest --runInBand",
    "test:db": "NODE_ENV=test jest --config jest.db.config.cjs --runInBand",
    "test:watch": "NODE_ENV=test jest --watch",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:seed": "tsx prisma/seed.ts",
    "docker:up": "docker compose up --build",
    "docker:down": "docker compose down -v",
    "docker:test": "docker compose --profile test run --rm --build test",
    "postman:test": "npx --yes newman run postman/LeakyBucket.postman_collection.json -e postman/LeakyBucket.postman_environment.json",
    "postinstall": "prisma generate"
  },
  "keywords": [
    "nodejs",
    "koa",
    "graphql",
    "typescript",
    "prisma",
    "leaky-bucket"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/koa": "^3.0.1",
    "@types/koa__router": "^12.0.5",
    "@types/node": "^25.2.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "prettier": "^3.8.1",
    "prisma": "^6.16.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^15.3.0",
    "@prisma/client": "^6.16.0",
    "@types/koa__cors": "^5.0.1",
    "dotenv": "^17.2.4",
    "graphql": "^16.12.0",
    "graphql-yoga": "^5.18.0",
    "koa": "^3.1.1",
    "pino": "^10.3.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
